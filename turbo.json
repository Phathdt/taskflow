{
  "$schema": "https://turbo.build/schema.json",
  "daemon": false,
  "globalDependencies": ["**/.env.*local", ".env"],
  "tasks": {
    "@apps/api#build": {
      "dependsOn": ["^build"],
      "outputs": ["../../dist/apps/api/**"],
      "outputLogs": "errors-only",
      "env": ["NODE_ENV"]
    },
    "@apps/api#build:prod": {
      "dependsOn": ["^build", "@apps/api#typecheck", "@apps/api#build"],
      "outputs": ["../../dist/apps/api/**"],
      "outputLogs": "errors-only",
      "env": ["NODE_ENV"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["../../dist/**"],
      "outputLogs": "errors-only",
      "env": ["NODE_ENV"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "env": ["CI", "NODE_ENV"]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "db:generate": {
      "cache": false,
      "outputs": ["node_modules/.prisma/**"]
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "NODE_ENV",
    "PORT",
    "APP_PORT",
    "REDIS_URL",
    "SOLANA_RPC_URL",
    "ETHEREUM_RPC_URL",
    "PRIVATE_KEY"
  ]
}
